<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/relative.main.background">

<vn.asiantech.internship.footballmanager.widget.HeaderBar
    android:id="@+id/mHeaderBarLeague"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
</vn.asiantech.internship.footballmanager.widget.HeaderBar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerViewLeague"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mHeaderBarLeague"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/mFabRemoveLeague"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/imagebutton.bottom_margin"
        android:layout_marginLeft="@dimen/imagebutton.bottom_margin"
        android:layout_marginStart="@dimen/imagebutton.bottom_margin"
        android:src="@drawable/ic_removes"
        fab:fab_type="mini"
        fab:fab_colorNormal="@color/primary_removes"
        fab:fab_colorPressed="@color/primary_removes_pressed"/>

    <ImageButton
        android:id="@+id/mImgBtnDeleteLeague"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/imagebutton.bottom_margin"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@drawable/custom_button_delete"
        android:visibility="invisible"/>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/mFabAddLeague"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/imagebutton.bottom_margin"
        android:layout_marginEnd="@dimen/imagebutton.bottom_margin"
        android:layout_marginRight="@dimen/imagebutton.bottom_margin"
        android:src="@drawable/ic_add_white"
        fab:fab_type="mini"
        fab:fab_colorNormal="@color/primary_add"
        fab:fab_colorPressed="@color/primary_add_pressed"/>
</RelativeLayout>
